
@model IEnumerable<Microsoft.AspNet.Identity.EntityFramework.IdentityRole>
@{
    ViewBag.Title = "Index";
}

<h2>Roles Listing </h2>

@Html.ActionLink("Create New Role", "Create") | @Html.ActionLink("Manage User Role", "ManageUserRoles") | @Html.ActionLink("Manage Rounds", "ManageRounds", "Manage", new { area = "Admin" }) | @Html.ActionLink("Manage Departments", "ManageDepts", "Manage", new { area = "Admin" })
<hr />
<div>
    @foreach (var role in Model)
    {
        <p>
            <strong>@role.Name | </strong>
            <span onclick="return confirm('Are you sure to delete?')">@Html.ActionLink("Delete", "Delete", new { roleName = @role.Name }, new { @style = "color:red;" })</span> |
            @Html.ActionLink("Edit", "Edit", new { roleName = @role.Name })
        </p>
    }
</div>

